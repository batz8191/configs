# resize window (you can also use the mouse for that)
mode "resize" {
	bindsym h resize shrink width 10 px or 10 ppt
	bindsym j resize grow height 10 px or 10 ppt
	bindsym k resize shrink height 10 px or 10 ppt
	bindsym l resize grow width 10 px or 10 ppt
	bindsym Shift+h resize shrink width 50 px or 50 ppt
	bindsym Shift+j resize grow height 50 px or 50 ppt
	bindsym Shift+k resize shrink height 50 px or 50 ppt
	bindsym Shift+l resize grow width 50 px or 50 ppt
	# back to normal: Enter or Escape
	bindsym Return mode "default"
	bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"

# mpd
mode "mpd" {
	bindsym p exec $HOME/.ratpoison/mpd_handler `cat $HOME/.ratpoison/stations | dmenu -l 10 $dmenu_params -p '> ' | awk '{print $2}'` ; mode "default"
	bindsym c exec mpc current -f '[[%artist% - ]%title%]' | xsel -ibp ; mode "default"
	bindsym s exec mpc stop ; mode "default"
	bindsym l exec mpc clear ; mode "default"
	# back to normal: Enter or Escape
	bindsym Return mode "default"
	bindsym Escape mode "default"
}
bindsym $mod+m mode "mpd"

# Volume
mode "vol" {
	bindsym m exec $HOME/.i3/mute.sh ; mode "default"
	bindsym v exec $HOME/.i3/mute.sh ; mode "default"
	bindsym grave exec amixer sset Master 0 ; mode "default"
	bindsym 1 exec amixer sset Master 10 ; mode "default"
	bindsym 2 exec amixer sset Master 20 ; mode "default"
	bindsym 3 exec amixer sset Master 30 ; mode "default"
	bindsym 4 exec amixer sset Master 40 ; mode "default"
	bindsym 5 exec amixer sset Master 50 ; mode "default"
	bindsym 6 exec amixer sset Master 60 ; mode "default"
	bindsym 7 exec amixer sset Master 70 ; mode "default"
	bindsym 8 exec amixer sset Master 80 ; mode "default"
	bindsym 9 exec amixer sset Master 90 ; mode "default"
	bindsym 0 exec amixer sset Master 100 ; mode "default"
	bindsym Next exec amixer -c0 sset Master 5%- >/dev/null ; mode "default"
	bindsym Prior exec amixer -c0 sset Master 5%+ >/dev/null ; mode "default"
	bindsym p exec amixer sset Master $(echo | dmenu $dmenu_params -p 'volume: ')% > /dev/null ; mode "default"
	# back to normal: Enter or Escape
	bindsym Return mode "default"
	bindsym Escape mode "default"
}
bindsym $mod+v mode "vol"

